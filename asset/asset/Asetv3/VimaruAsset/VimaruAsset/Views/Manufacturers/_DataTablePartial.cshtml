
@model IEnumerable<VimaruAsset.Models.Manufacturer>
    <table id="manu" class="table table-striped table-bordered table-data">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên nhà cung cấp</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item != null)
                {
                    <tr>
                        <td></td>
                        <td>@item.Name</td>
                        <td>@item.Address</td>
                        <td>@item.PhoneNo</td>
                        <td class="text-center">
                            <button class="btn btn-secondary action-btn border-0" data-toggle="ajax-modal" data-target="#order-model" data-url="@(Url.Action("Create") + "/" + item.Id)">
                                <span>Sửa</span>
                            </button>
                            <button class="btn btn-danger action-btn border-0" data-toggle="ajax-modal" data-target="#delete-model" data-url="@(Url.Action("Delete") + "/" + item.Id)">
                                <span>Xóa</span>
                            </button>
                        </td>

                    </tr>
                }
            }

        </tbody>
    </table>
