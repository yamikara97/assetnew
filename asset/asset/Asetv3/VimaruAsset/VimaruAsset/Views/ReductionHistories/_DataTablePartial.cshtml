
@model IEnumerable<VimaruAsset.Models.ReductionHistory>
<div class="table-responsive">
    <table id="reductionhistory" class="table table-striped table-bordered nowrap mt-2 table-data">
        <thead>
            <tr>
                <th>STT</th>
                <th style="width: 16%" class="text-primary">Ngày</th>
                <th class="text-primary">Chuyển từ</th>
                <th class="text-primary">Sổ</th>
                <th class="text-primary">Đến đơn vị</th>
                <th class="text-primary">Người thực hiện</th>
                <th class="text-primary">Số lượng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                if (item != null)
                {
            <tr>
                <td></td>
                <td class="font-weight-bold text-wrap">@item.DateUpdate.ToString("dd/MM/yyyy HH:mm")</td>
                <td class="font-weight-bold text-wrap">@item.FromDepartment</td>
                <td class="font-weight-bold text-wrap">@item.Frombook</td>
                <td class="font-weight-bold">@item.ToDepartment</td>
                <td class="font-weight-bold">
                    <span>@item.PersonMove</span>
                </td>
                <td class="font-weight-bold">
                    @item.NumberofAsset
                </td>
                <td class="font-weight-bold">
                    <button class="btn btn-danger action-btn  border-0" data-toggle="ajax-modal" data-target="#delete-model" data-url="@(Url.Action("Create"))">
                        <span><i class="fas fa-eye"></i></span>
                    </button>
                </td>
            </tr>
                }
            }

        </tbody>
    </table>

</div>
