@model VimaruAsset.Models.Assets

<div class="modal fade" id="delete-model" tabindex="-1" role="dialog" aria-labelledby="delete-model-label" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Xác nhận xóa tài khoản này</h3>
            </div>
            <div class="modal-body form-horizontal">
                <form asp-action="Delete" enctype="multipart/form-data">
                    <input type="hidden" id="wareHouseID2" name="wareHouseID2" value="" />
                    <div class=" col-12 ml-auto mr-auto container">
                        <div class="row pl-2">
                            <div class="col-6">
                                <label asp-for="Name" class="control-label"></label>
                                <input readonly asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row pl-2 mt-2">
                            <div class="col-12">
                                <label class="control-label">Kho</label>
                                <input readonly asp-for="WareHouse.Name" class="form-control" />
                                <span asp-validation-for="WareHouse.Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" localize-content>Thoát</button>
                <button type="button" class="btn btn-danger" data-save="modal" localize-content>Xóa</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#wareHouseID2').val($('#wareHouse').val());
    });
</script>
@await Html.PartialAsync("_ValidationScriptsPartial")