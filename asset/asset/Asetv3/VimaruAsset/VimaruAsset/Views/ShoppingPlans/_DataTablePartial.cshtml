
@model IEnumerable<VimaruAsset.Models.ShoppingPlan>
<table id="shoppingplan" class="table table-striped table-bordered table-data">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên kế hoạch</th>
            <th>Năm</th>
            <th>Nội dung</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item != null)
            {
                <tr>
                    <td></td>
                    <td>@item.Name</td>
                    <td>@item.Year</td>
                    <td>@item.Content</td>
                    <td class="text-center">
                        <button class="btn btn-secondary action-btn border-0" data-toggle="ajax-modal" data-target="#order-model" data-url="@(Url.Action("Create") + "/" + item.Id)">
                            <span>Sửa</span>
                        </button>
                        <button class="btn btn-danger action-btn border-0" data-toggle="ajax-modal" data-target="#delete-model" data-url="@(Url.Action("Delete") + "/" + item.Id)">
                            <span>Xóa</span>
                        </button>
                    </td>

                </tr>
            }
        }

    </tbody>
</table>
