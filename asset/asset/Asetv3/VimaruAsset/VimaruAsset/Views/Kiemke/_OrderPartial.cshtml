    <div class="modal fade p-0" id="order-modal ">
    <form asp-action="Create">
        <div class="modal-lg modal-dialog ">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body p-0">

                    <div class="container">
                        <input type="hidden" id="valueReturn" name="val" value="" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Từ tháng</label>
                                    <select name="fromdate" class="form-control">
                                        <option value="value">-----chọn-----</option>
                                        @for (int i = 1; i < 13; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Đến tháng</label>
                                    <select name="todate" class="form-control">
                                        <option value="value">-----chọn-----</option>
                                        @for (int i = 1; i < 13; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Chọn năm</label>
                                    <input type="number" class="form-control" name="Year" value="" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr />
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary" value="Tạo"/>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Thoát</button>
                </div>
            </div>
        </div>
    </form>
</div>
    <script>
        $(document).ready(function () {
            var value = $('#valueToChange').text();
            $('#valueReturn').val(value);
        });
    </script>