@model IEnumerable<VimaruAsset.Models.AssetsViewModel>

@{
    ViewData["Title"] = "Index";
}

<section class="section">
    <div class="section-header">
        <ul class="breadcrumb bg-white font-weight-bold" style="margin: unset !important">
            <li class="breadcrumb-item">
                <a asp-area="" asp-controller="Home" asp-action="Index">Trang chủ</a>
            </li>
            <li class="breadcrumb-item active">
                <a>Nhóm tài sản</a>
            </li>
        </ul>
    </div>
    <div class="section-body ">
        <div class="card">
            <div class="card-body">
                <div class="container">
                    <div class="row">
                        <button class="ml-auto btn btn-outline-info col-2 mr-1" data-toggle="ajax-modal" data-target="#order-model" data-url="@Url.Action("DeleteMulti")">
                            Xóa mục được chọn
                            <i class="text-danger fas fa-trash"></i>
                        </button>
                        <button class=" btn btn-outline-info col-2 mr-1" data-toggle="ajax-modal" data-target="#order-model" data-url="@Url.Action("ImportList")">
                            Thêm nhiều
                            <i class="text-danger fas fa-plus"></i>
                        </button>
                        <button class="btn btn-outline-info col-2 mr-0 " data-toggle="ajax-modal" data-target="#order-model" data-url="@Url.Action("Create")">
                            Thêm mới
                            <i class="text-danger fas fa-plus"></i>
                        </button>
                    </div>
                </div>
                <hr />

                <div class="container" p>

                </div>
                @await Html.PartialAsync("_DataTablePartial.cshtml", Model)
            </div>
        </div>

    </div>
</section>
<div id="modal-placeholder"></div>
<textarea hidden id="valueToChange"></textarea>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ModalScriptInit", "assetGroup");}
}
