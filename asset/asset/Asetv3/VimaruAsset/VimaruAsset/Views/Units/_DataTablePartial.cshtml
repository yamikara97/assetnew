
@model IEnumerable<VimaruAsset.Models.Unit>

<table id="unit" class="table table-striped table-bordered table-data">
    <thead>
        <tr>
            <th>STT</th>
            <th>Đơn vị tính</th>
            <th>Ghi chú</th>
            <th>Chỉnh sửa vào</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item != null)
            {
                <tr>
                    <td></td>
                    <td>@item.UnitName</td>
                    <td>@item.Note</td>
                    <td>@item.DateUpdate.ToString("dd-MM-yyyy HH:mm")</td>
                    <td class="text-center">
                        <button class="btn btn-secondary action-btn border-0" data-toggle="ajax-modal" data-target="#order-model" data-url="@(Url.Action("Create") + "/" + item.Id)">
                            <span>Sửa</span>
                        </button>
                        <button class="btn btn-danger action-btn border-0" data-toggle="ajax-modal" data-target="#delete-model" data-url="@(Url.Action("Delete") + "/" + item.Id)">
                            <span>Xóa</span>
                        </button>
                    </td>

                </tr>
            }
        }

    </tbody>
</table>