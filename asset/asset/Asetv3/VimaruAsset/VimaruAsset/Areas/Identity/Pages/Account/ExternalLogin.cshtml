@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Bước cuối";
}
<div class="section">
    <div class="section-header">
        <h5 class="text-info">Từ giờ bạn có thể đăng nhập bằng tài khoản này</h5>
    </div>
    <div class="section-body">
        <div class="card">
            <div class="card-body">
                <form class="row" asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="col-4 ml-auto">
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input readonly asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Hoàn tất đăng kí</button>
                    </div>
                    <div class="col-4 mr-auto">
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber"></label>
                            <input asp-for="Input.PhoneNumber" class="form-control" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label>Chọn bộ phận</label>
                            <select asp-for="Input.DepartmentID" class="form-control" required>
                                @{
                                    var ListDepartment = ViewData["Department"] as List<Department>;
                                }
                                <option value="" selected>--Chọn--</option>
                                @foreach (var item in ListDepartment)
                                {
                                    if (item != null)
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </form>
                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
            </div>
        </div>
    </div>
</div>